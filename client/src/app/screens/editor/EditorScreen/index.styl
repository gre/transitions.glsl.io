/*
 * Solving positionning between screen components
 * Component styles are in their respective stylus files
 */

.editor-screen {
  position: relative;
  .toolbar {
    position: relative;
    .license-label {
      position: absolute;
      text-align: center;
      left: 0;
      top: 0;
      width: 80px;
      height: 100%;
      overflow: hidden;
    }
    .transition-infos {
      min-width: 300px;
      text-align: right;
      float: right;
    }
  }
  .main {
    position: relative;
    .view {
      width: 256px;
      position: absolute;
      left: 80px;
      top: 0;
      .leftPanel {
        position: absolute;
        right: 256px;
        width: 70px;
      }
      .vignette {
        border: none;
      }
      .tabs {
        white-space: nowrap;
        .tab {
          line-height: 20px;
          box-sizing: border-box;
          padding: 2px 4px;
          display: inline-block;
          text-align: center;
          overflow: ellipsis;
          font-size: 1em;
          color: #aaa;
          background: #111;
          font-size: 0.8em;
          font-weight: 300;
          span {
          }
          &:hover {
            background: #000;
            color: #fff;
          }
          &.current, &.current:hover {
            background: none;
            color: #aaa;
          }
        }
      }
      .share-sn {
        text-align: center;
        .popup {
          font-size: 32px;
          padding: 4px 16px;
          display: inline-block;
        }
      }
      .tabContent {
        padding: 5px 0;
        background: #333;

        .preview-link {
          float: right;
          font-size: 0.8em;
        }
        dt {
          margin-top: 10px;
        }
        dd {
          margin: 0;
        }
        textarea, input {
          width: 100%;
          font-size: 0.8em;
          font-family: monospace;
        }
        textarea {
          min-height: 60px;
        }
      }
    }
    .transition-editor {
      position: absolute;
      left: 336px;
      top: 0;
      .glsl-editor {
        width: 100%;
        height: 400px;
      }
    }
  }
}

